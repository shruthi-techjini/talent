{% extends 'base.html.twig' %}

{% block body %}
    <h1>Genre</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ genre.status }}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ genre.createdBy }}</td>
            </tr>
            <tr>
                <th>Createddatetime</th>
                <td>{% if genre.createdDateTime %}{{ genre.createdDateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('genre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('genre_edit', { 'id': genre.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
