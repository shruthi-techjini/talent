{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Categoryid</th>
                <th>Subcategoryid</th>
                <th>Userid</th>
                <th>Image</th>
                <th>Status</th>
                <th>Createddatetime</th>
                <th>Updateddatetime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.categoryId }}</td>
                <td>{{ post.subCategoryId }}</td>
                <td>{{ post.userId }}</td>
                <td>{{ post.image }}</td>
                <td>{{ post.status }}</td>
                <td>{% if post.createdDateTime %}{{ post.createdDateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if post.updatedDateTime %}{{ post.updatedDateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
