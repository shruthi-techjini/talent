{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block form_row %}
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
{% endblock %}

{% block body %}

	<div class="panel panel-default">
		<div class="panel-heading">
			<h2 class="center" style="padding-left: 14%;">Post Creation</h2>
		</div>
		
		<div class="panel-body">
    		<form class="form-horizontal" action="{{ path('post_edit',{ 'id': id }) }}" enctype="multipart/form-data" method="post">
                <div class="form-group">
                	<div class="col-sm-3" style="padding-left: 15%;">
                		{{ form_label(form.title) }}
                	</div>
                      <div class="col-sm-5">
            			{{ form_widget(form.title) }}
            		  </div>
                </div>
                <div class="form-group">
                	<div class="col-sm-3" style="padding-left: 15%;">
                		{{ form_label(form.content) }}
                	</div>
                    <div class="col-sm-5">
            			{{ form_widget(form.content) }}
            		</div>
                </div>
               
                <div class="form-group">
                	<div class="col-sm-3" style="padding-left:15%">
                		{{ form_label(form.file) }}
                	</div>
                	<div class="col-sm-5">
                		{{ form_widget(form.file) }}
                	</div>
                </div>
            
           		<br/>
                <div class="form-group">        
                  <div class="col-sm-offset-3 col-sm-10">
                    <button type="submit" class="btn btn-success">Edit Post</button>
                    <a href="{{ path('post_index') }}" class="btn btn-default">Back to the list</a>
                  </div>
                </div>
          </form>	
		</div>
	</div>












