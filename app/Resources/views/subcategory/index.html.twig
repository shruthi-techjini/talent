{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subcategories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Createddatetime</th>
                <th>Categoryid</th>
                <th>Createdby</th>
                <th>Updateddatetime</th>
                <th>Updatedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subcategory in subcategories %}
            <tr>
                <td><a href="{{ path('subcategory_show', { 'id': subcategory.id }) }}">{{ subcategory.id }}</a></td>
                <td>{{ subcategory.name }}</td>
                <td>{{ subcategory.description }}</td>
                <td>{{ subcategory.status }}</td>
                <td>{% if subcategory.createdDateTime %}{{ subcategory.createdDateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ subcategory.categoryId }}</td>
                <td>{{ subcategory.createdBy }}</td>
                <td>{% if subcategory.updatedDateTime %}{{ subcategory.updatedDateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ subcategory.updatedBy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('subcategory_show', { 'id': subcategory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('subcategory_edit', { 'id': subcategory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subcategory_new') }}">Create a new subcategory</a>
        </li>
    </ul>
{% endblock %}
